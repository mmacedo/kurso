$ ->
  offsetTop = $('.main').position().top

  $('.bs-docs-apudnav').each ->
    $(this).affix
      offset:
        top: offsetTop
        bottom: ->
          $('footer').outerHeight(true) <% if Rails.env.development?
          %> + ($('#footnotes_debug').outerHeight(true) || 0) <% end %>

  if $('.apudstango').length
    $(document.body).scrollspy
      offset: offsetTop
      target: '.apudstango'
