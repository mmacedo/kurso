.page-header
  %h2 -om
%p= t '.ekspliko'
.row
  .col-xs-4
    %h3 ki-
  .col-xs-8
    %dl
      %dt= eo "kiom"
      %dd= t '.ki.vorto'
      %dt= eo "Kiom estas du kaj du? — Kvar!"
      %dd= t '.ki.frazo'
.row
  .col-xs-4
    %h3 ti-
  .col-xs-8
    %dl
      %dt= eo "tiom"
      %dd= t '.ti.vorto'
      %dt= eo "Li manĝis tiom, kiom li volis."
      %dd= t '.ti.frazo'
.row
  .col-xs-4
    %h3 i-
  .col-xs-8
    %dl
      %dt= eo "iom"
      %dd= t '.i.vorto'
      %dt= eo "Mi devas aĉeti iom da kafo."
      %dd= t '.i.frazo'
.row
  .col-xs-4
    %h3 neni-
  .col-xs-8
    %dl
      %dt= eo "neniom"
      %dd= t '.neni.vorto'
      %dt= eo "Kiom da infanoj ludas en la domo? — Neniom."
      %dd= t '.neni.frazo'
.row
  .col-xs-4
    %h3 ĉi-
  .col-xs-8
    %dl
      %dt= eo "ĉiom"
      %dd= t '.ĉi.vorto'
      %dt= eo "Kiom da bezino vi volas? — Mi volas ĉiom, kiom vi havas."
      %dd= t '.ĉi.frazo'
